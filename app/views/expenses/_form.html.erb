<%= form_with(model: expense, local: true) do |form| %>
  <% if expense.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

      <ul>
      <% expense.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date, id: :expense_date %>
  </div>

  <div class="field">
    <%= form.label :amount %>
    <%= form.text_field :amount, id: :expense_amount %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :expense_name %>
  </div>

  <div class="field">
    <%= form.label :debtor %>
    <%= form.collection_select :debtor_id, Debtor.all, :id, :name %>
  </div>

  <div class="field">
    <%= form.label :expense_type %>
    <%= form.text_field :type, id: :expense_type %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.text_field :status, id: :expense_status %>
  </div>

  <div class="field">
    <%= form.label :receipt %>
    <%= form.file_field :receipt %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
